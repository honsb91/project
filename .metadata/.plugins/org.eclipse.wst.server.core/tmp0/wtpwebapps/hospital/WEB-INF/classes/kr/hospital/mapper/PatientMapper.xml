<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="kr.hospital.mapper.PatientMapper">
    
    <!-- 환자 회원가입 -->
	<insert id="patientJoin">
		insert into patient
		values
		(#{patient_id}, #{patient_pw}, #{patient_name}, #{patient_phone}, 
		#{patient_birth}, #{patient_address1}, #{patient_address2}, 
		#{patient_address3}, #{patient_gender}, #{patient_blood})
	</insert>
	
	<!-- 아이디 중복검사 -->
	<select id="idCheck" resultType="int">
		select count(*) from patient 
		where patient_id = #{patient_id}
	</select>
	
	<!-- 로그인 -->
	<select id="patientLogin" resultType="kr.hospital.model.PatientVO">
		select patient_id, patient_pw
		from patient
		where patient_id = #{patient_id} and patient_pw = #{patient_pw}
	</select>
  </mapper>
  