@charset "UTF-8";

  /* 전체 테이블에 대한 스타일 */
  .table {
    width: 100%; /* 테이블의 폭을 100%로 설정 */
    margin-bottom: 20px; /* 테이블 아래 여백 */
    border-collapse: collapse; /* 테이블 셀 경계를 병합하여 테두리를 만듭니다. */
  }

  /* 테이블 헤더의 스타일 */
  th {
    background-color: #f2f2f2; /* 헤더 배경색 */
  }

  /* 테이블 셀의 스타일 */
  td, th {
    padding: 10px; /* 셀의 안 여백 설정 */
    border: 1px solid #ddd; /* 셀 테두리 스타일 및 색상 설정 */
  }