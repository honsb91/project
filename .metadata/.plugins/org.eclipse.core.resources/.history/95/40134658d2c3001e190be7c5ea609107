<mapper namespace="kr.hospital.mapper.NoticeMapper">
	
	<!-- 공지사항 등록 -->
		<insert id="notice_registr">
			insert into notice(notice_no, notice_title, notice_content, notice_regdate, notice_writer)
			values(#{notice_no},#{notice_title},#{notice_content},#{notice_regdate},#{notice_writer})
		</insert>	
	
	<!-- 공지사항 목록 -->
		<select id="getList" resultType="kr.hospital.model.NoticeVO">
			select * from notice;
		</select>
</mapper>