<script>
 
/* 등록 버튼 */
$("#registrBtn").click(function(){    
    $("#registrForm").submit();
});
 
/* 취소 버튼 */
$("#cancelBtn").click(function(){
    location.href="/admin/notice"
});

$(document).ready(function(){
    
	let result = '<c:out value="${registr_result}"/>';
    
    checkResult(result);
    
    function checkResult(result){
        
        if(result === ''){
            return;
        }
        alert("공지사항'${registr_result}' 을 등록하였습니다.");
    }
});
 
</script>
