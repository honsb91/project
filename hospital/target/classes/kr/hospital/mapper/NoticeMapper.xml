<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.hospital.mapper.NoticeMapper">
	
	<!-- 공지사항 등록 -->
		<insert id="registr">
			insert into notice(notice_title, notice_content,notice_writer)
			values(#{notice_title},#{notice_content},#{notice_writer})
		</insert>	
	
	<!-- 공지사항 목록 -->
		<select id="getList" resultType="kr.hospital.model.NoticeVO">
			select * from notice
		</select>
		
	<!-- 공지사항 조회 -->
		<select id="getPage" resultType="kr.hospital.model.NoticeVO">
			select * from notice 
			where notice_no = #{notice_no}
		</select>
		
	<!-- 공지사항 수정 -->
		<update id="modify">
			update notice 
			set notice_title = #{notice_title},
			notice_content = #{notice_content}
			where notice_no = #{notice_no}
		</update>
</mapper>